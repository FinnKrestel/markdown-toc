{
  "name": "md-toc-cli",
  "version": "2.0.0",
  "description": "Automatically insert or update a clickable table of contents (TOC) into your Markdown documents based on its headings using CLI or JavaScript module.",
  "type": "commonjs",
  "bin": "./src/bin/index.js",
  "main": "./src/lib/index.js",
  "scripts": {
    "lint": "eslint '**/*.js'; prettier --check '**/*.js'",
    "format": "prettier --write '**/*.js'",
    "test": "mocha",
    "start": "./src/bin/index.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evgeniy-khist/markdown-toc.git"
  },
  "keywords": [
    "markdown",
    "toc",
    "table-of-contents",
    "cli"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "author": "Evgeniy Khyst",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/evgeniy-khist/markdown-toc/issues"
  },
  "homepage": "https://github.com/evgeniy-khist/markdown-toc#readme",
  "dependencies": {
    "yargs": "^17.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "husky": "^7.0.1",
    "mocha": "^9.1.0",
    "prettier": "^2.3.2"
  }
}
